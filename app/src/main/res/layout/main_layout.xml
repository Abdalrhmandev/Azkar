<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/fivedp"
    app:cardCornerRadius="@dimen/cardtwilve"
    app:cardElevation="@dimen/cardthree"
    app:contentPadding="@dimen/cardthree"
    app:cardBackgroundColor="@color/primary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fadl">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/main_layout"
            android:layout_margin="@dimen/tendp"
            android:background="@color/textBackground"



            >



            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="@dimen/tendp"
                app:cardCornerRadius="@dimen/cardtwilve"
                app:cardElevation="@dimen/cardthree"
                app:contentPadding="@dimen/cardthree"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/textBackground"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/benefit"
                    android:textSize="@dimen/thirtysp"
                    android:id="@+id/fadl"
                    android:textColor="@color/secondary_text"
                    android:background="@color/textBackground"
                    android:gravity="center"
                    />


            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="@dimen/tendp"
                app:cardCornerRadius="@dimen/cardtwilve"
                app:cardElevation="@dimen/cardthree"
                app:contentPadding="@dimen/cardthree"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/textBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/below_fadl"
                    android:textSize="@dimen/twintysp"
                    android:textColor="@color/divider"
                    android:background="@color/textBackground"
                    android:id="@+id/textView2" />

            </android.support.v7.widget.CardView>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/fivedp"
                android:background="#000"
                android:layout_marginBottom="@dimen/fivedp"/>




            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="@dimen/tendp"
                app:cardCornerRadius="@dimen/cardtwilve"
                app:cardElevation="@dimen/cardthree"
                app:contentPadding="@dimen/cardthree"
                app:cardBackgroundColor="@color/textBackground"
                android:layout_gravity="center|top"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" إضغط عَلَى الزِّرِّ الْخاصِّ بِفُضُلِ الأذكار فى الْأَسْفَلَ لِمُعَرَّفِهِ فُضُلِ الأذكار"
                    android:singleLine="false"
                    android:textSize="@dimen/twintysp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/fadltextView"
                    android:textColor="@color/divider"
                    android:background="@color/textBackground"
                    />
            </android.support.v7.widget.CardView>




        </LinearLayout>


    </ScrollView>


</android.support.v7.widget.CardView>