<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context="com.example.a.e.a.azkar.AboutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/fivedp"
        android:layout_marginBottom="@dimen/fivedp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#ab212121"
        >

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fivedp"
            app:cardCornerRadius="@dimen/cardtwilve"
            app:cardElevation="@dimen/cardthree"
            app:contentPadding="@dimen/cardthree"
            app:cardBackgroundColor="#69f0ae">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#69f0ae"
                android:textColor="#000"
                android:text="للتواصل"
                android:id="@+id/bconnect"
                android:onClick="Transport"
                />

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fivedp"
            app:cardCornerRadius="@dimen/cardtwilve"
            app:cardElevation="@dimen/cardthree"
            app:contentPadding="@dimen/cardthree"
            app:cardBackgroundColor="#69f0ae">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#69f0ae"
            android:textColor="#000"
            android:text="بعض الافكار الموجوده بالتطبيق "
            android:id="@+id/bsome"
            android:onClick="Transport"
            />

        </android.support.v7.widget.CardView>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/aboutscrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/tendp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/tendp"
                android:background="#ab212121"
                android:gravity="center"
                android:padding="@dimen/tendp"
                android:text="بعض الافكار الموجوده بالتطبيق "
                android:textColor="@color/divider"
                android:textSize="@dimen/askartextSize"
                android:id="@+id/tsome"
                />


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fivedp"
                app:cardCornerRadius="@dimen/cardtwilve"
                app:cardElevation="@dimen/cardthree"
                app:contentPadding="@dimen/cardthree"
                app:cardBackgroundColor="#69f0ae">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#69f0ae"
                    android:gravity="right"
                    android:padding="@dimen/tendp"
                    android:text="@string/aboutTricks"
                    android:textColor="#000"
                    android:textSize="@dimen/twintysp"
                    android:id="@+id/textView" />


            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/tendp"
                android:background="#ab212121"
                android:gravity="center"
                android:padding="@dimen/tendp"
                android:text="#### للتواصل ####"
                android:textColor="@color/divider"
                android:textSize="@dimen/askartextSize"
                android:id="@+id/tconnect"/>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fivedp"
                app:cardCornerRadius="@dimen/cardtwilve"
                app:cardElevation="@dimen/cardthree"
                app:contentPadding="@dimen/cardthree"
                app:cardBackgroundColor="#69f0ae"
                android:id="@+id/connectcard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_margin="@dimen/fivedp"
                            android:background="#69f0ae"
                            android:gravity="center"
                            android:text="Dev Email=إيميل المبرمج:"
                            android:textColor="#000"
                            android:textSize="@dimen/twintysp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="aeadevdoc@gmail.com"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="@dimen/twintysp"
                            android:layout_margin="@dimen/fivedp"
                            android:onClick="textsOnclick"
                            android:id="@+id/firstText"


                            />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_margin="@dimen/fivedp"
                            android:background="#69f0ae"
                            android:gravity="center"
                            android:text="App Email=إيميل التطبيق:"
                            android:textColor="#000"
                            android:textSize="@dimen/twintysp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="azkarappaea@gmail.com"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="@dimen/twintysp"
                            android:layout_margin="@dimen/fivedp"
                            android:id="@+id/secondText"
                            android:onClick="textsOnclick"


                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_margin="@dimen/fivedp"
                            android:background="#69f0ae"
                            android:gravity="center"
                            android:text="Rate App=قيم التطبيق:"
                            android:textColor="#000"
                            android:textSize="@dimen/twintysp"

                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/rate"
                            android:padding="@dimen/fivedp"
                            android:layout_weight="1"
                            android:id="@+id/rater"
                            />

                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/rate_action"
                           android:padding="@dimen/fivedp"
                           android:layout_weight="1"
                           android:id="@+id/ratel"

                           />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="اضغط على الايميل للنسخ او اضغط على قيم التطبيق لتقيمه فى المتجر بكل سهوله و دون عناء او اهدار للوقت ^_^ "
                        android:textSize="@dimen/fiftensp"
                        android:textColor="#000"
                        android:padding="@dimen/tendp"
                        android:layout_margin="@dimen/fivedp"
                        />


                </LinearLayout>


        </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>


</LinearLayout>
